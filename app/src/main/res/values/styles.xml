<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:dropDownListViewStyle">@style/App.Style.Spinner</item>

        <item name="android:homeAsUpIndicator">@drawable/ic_white_back_up</item>

        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="App.Style.Spinner" parent="Base.Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">@color/colorPrimary</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="ExpandedTitleModi" parent="TextAppearance.AppCompat">
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">@color/colorTransparent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CollapsingTitleModi" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Counter" parent="TextAppearance.Design.Counter">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Hint" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="OverFlowCounter" parent="TextAppearance.Design.Counter.Overflow">
        <item name="android:textColor">@color/errorText</item>
    </style>

</resources>
